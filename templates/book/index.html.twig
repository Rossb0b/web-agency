{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="text-center mt-5 mb-3">Liste de vos livres</h1>
        
        <a href="{{ path('book_new') }}" class="btn btn-success btn-md" role="button" aria-pressed="true">Nouveau livre</a>
    
        <div class="row mt-5 mb-4">
            {% for book in books %}
            
            <div class="card col-12 col-md-6 col-lg-4 mx-auto mb-5 p-0">
                <img src="/uploads/Cover/{{ book.image.src }}" class="card-img-top" alt="{{ book.image.text }}">
                <div class="card-body">
                    <h5 class="card-title">{{ book.title }}</h5>
                    
                    <a href="{{ path('book_show', {'id': book.id}) }}" class="ml-2 btn btn-primary">Details</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
            
            {% endfor %}
        </div>

    </div>
{% endblock %}
